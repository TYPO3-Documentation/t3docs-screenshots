{
    "name": "t3docs/screenshots-styleguide",
    "description": "TYPO3 Screenshots Styleguide",
    "license": "MIT",
    "config": {
        "platform": {
            "php": "7.4.1"
        },
        "sort-packages": true
    },
    "repositories": {
        "styleguide": {
            "type": "path",
            "url": "../../public/typo3conf/ext/styleguide"
        },
        "packages": {
            "type": "path",
            "url": "../../packages/*"
        }
    },
    "require": {
        "ext-dom": "*",
        "ext-imagick": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "helhum/typo3-console": "dev-latest",
        "typo3/cms-adminpanel": "dev-master as 11.4.0",
        "typo3/cms-backend": "dev-master as 11.4.0",
        "typo3/cms-belog": "dev-master as 11.4.0",
        "typo3/cms-beuser": "dev-master as 11.4.0",
        "typo3/cms-core": "dev-master as 11.4.0",
        "typo3/cms-dashboard": "dev-master as 11.4.0",
        "typo3/cms-extbase": "dev-master as 11.4.0",
        "typo3/cms-extensionmanager": "dev-master as 11.4.0",
        "typo3/cms-felogin": "dev-master as 11.4.0",
        "typo3/cms-filelist": "dev-master as 11.4.0",
        "typo3/cms-filemetadata": "dev-master as 11.4.0",
        "typo3/cms-fluid": "dev-master as 11.4.0",
        "typo3/cms-fluid-styled-content": "dev-master as 11.4.0",
        "typo3/cms-form": "dev-master as 11.4.0",
        "typo3/cms-frontend": "dev-master as 11.4.0",
        "typo3/cms-impexp": "dev-master as 11.4.0",
        "typo3/cms-indexed-search": "dev-master as 11.4.0",
        "typo3/cms-info": "dev-master as 11.4.0",
        "typo3/cms-install": "dev-master as 11.4.0",
        "typo3/cms-linkvalidator": "dev-master as 11.4.0",
        "typo3/cms-lowlevel": "dev-master as 11.4.0",
        "typo3/cms-opendocs": "dev-master as 11.4.0",
        "typo3/cms-recordlist": "dev-master as 11.4.0",
        "typo3/cms-recycler": "dev-master as 11.4.0",
        "typo3/cms-redirects": "dev-master as 11.4.0",
        "typo3/cms-reports": "dev-master as 11.4.0",
        "typo3/cms-rte-ckeditor": "dev-master as 11.4.0",
        "typo3/cms-scheduler": "dev-master as 11.4.0",
        "typo3/cms-seo": "dev-master as 11.4.0",
        "typo3/cms-setup": "dev-master as 11.4.0",
        "typo3/cms-sys-note": "dev-master as 11.4.0",
        "typo3/cms-t3editor": "dev-master as 11.4.0",
        "typo3/cms-tstemplate": "dev-master as 11.4.0",
        "typo3/cms-viewpage": "dev-master as 11.4.0"
    },
    "require-dev": {
        "typo3/cms-styleguide": "@dev"
    },
    "autoload-dev": {
        "psr-4": {
            "TYPO3\\Documentation\\Screenshots\\Tests\\Unit\\": "packages/screenshots/Tests/Unit/"
        }
    },
    "scripts": {
        "setup-suite": [
            "typo3cms install:setup --no-interaction --database-user-name root --database-user-password root --database-host-name db --admin-user-name admin --admin-password password --site-setup-type no",
            "typo3cms styleguide:generate --create"
        ]
    }
}
